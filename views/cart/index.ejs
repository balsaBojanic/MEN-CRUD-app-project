<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>

    <section id="recordssection">
        <h1>YOUR CART</h1>
        
        <div style="max-width: 1000px; margin: 0 auto;">
            <% if (cart && cart.length > 0) { %>
                <% let total = 0 %>
                <% cart.forEach(item => { %>
                    <% if (item.vinylId) { %>
                        <% total += item.vinylId.price * item.quantity %>
                        <div style="background-color: rgba(189, 189, 189, 0.9); padding: 20px; border-radius: 10px; margin-bottom: 20px; display: flex; gap: 20px; align-items: center;">
                            <img src="<%= item.vinylId.imageURL || '/default-vinyl.jpg' %>" alt="<%= item.vinylId.title %>" style="width: 100px; height: 100px; border-radius: 5px;">
                            <div style="flex: 1;">
                                <h3 style="color: #900020; margin: 0;"><%= item.vinylId.title %></h3>
                                <p style="margin: 5px 0;"><strong>Artist:</strong> <%= item.vinylId.artist %></p>
                                <p style="margin: 5px 0;"><strong>Price:</strong> $<%= item.vinylId.price %></p>
                                <p style="margin: 5px 0;"><strong>Condition:</strong> <%= item.vinylId.condition %></p>
                            </div>
                            <div>
                                <form action="/cart/<%= item._id %>?_method=PUT" method="POST" style="display: inline;">
                                    <input type="number" name="quantity" value="<%= item.quantity %>" min="1" style="width: 60px; padding: 5px;">
                                    <button type="submit" style="background-color: #900020; color: white; border: none; padding: 5px 10px; border-radius: 3px; cursor: pointer; margin-left: 5px;">Update</button>
                                </form>
                                <form action="/cart/<%= item._id %>?_method=DELETE" method="POST" style="display: inline; margin-left: 10px;">
                                    <button type="submit" style="background-color: #2d2d2d; color: white; border: none; padding: 5px 10px; border-radius: 3px; cursor: pointer;">Remove</button>
                                </form>
                            </div>
                        </div>
                    <% } %>
                <% }) %>
                
                <div style="background-color: rgba(189, 189, 189, 0.9); padding: 20px; border-radius: 10px; text-align: center;">
                    <h2 style="color: #900020;">Total: $<%= total.toFixed(2) %></h2>
                    <button style="background-color: #900020; color: white; border: none; padding: 12px 24px; border-radius: 5px; font-size: 18px; cursor: pointer; margin-top: 10px;">Checkout</button>
                </div>
            <% } else { %>
                <p style="color: #bdbdbd; font-size: 20px; text-align: center;">Your cart is empty.</p>
                <div style="text-align: center; margin-top: 20px;">
                    <a href="/vinyls" style="background-color: #900020; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;">Browse Vinyls</a>
                </div>
            <% } %>
        </div>
    </section>

    <%- include('../partials/footer') %>
</body>
</html>