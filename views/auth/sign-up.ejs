<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>

    <section id="justIn" style="min-height: 80vh; display: flex; justify-content: center; align-items: center;">
        <div style="background-color: rgba(189, 189, 189, 0.9); padding: 40px; border-radius: 20px; width: 400px;">
            <h1 style="color: #900020; text-align: center; margin-bottom: 30px;">SIGN UP</h1>
            
            <form action="/auth/sign-up" method="POST">
                <div style="margin-bottom: 15px;">
                    <label style="display: block; margin-bottom: 5px; color: #2d2d2d;">Username:</label>
                    <input type="text" name="username" required style="width: 100%; padding: 10px; border: 2px solid #900020; border-radius: 5px;">
                </div>
                
                <div style="margin-bottom: 15px;">
                    <label style="display: block; margin-bottom: 5px; color: #2d2d2d;">Email:</label>
                    <input type="email" name="email" required style="width: 100%; padding: 10px; border: 2px solid #900020; border-radius: 5px;">
                </div>
                
                <div style="margin-bottom: 15px;">
                    <label style="display: block; margin-bottom: 5px; color: #2d2d2d;">Role:</label>
                    <select name="role" required style="width: 100%; padding: 10px; border: 2px solid #900020; border-radius: 5px;">
                        <option value="">Select Role</option>
                        <option value="buyer">Buyer</option>
                        <option value="seller">Seller</option>
                    </select>
                </div>
                
                <div style="margin-bottom: 15px;">
                    <label style="display: block; margin-bottom: 5px; color: #2d2d2d;">Password:</label>
                    <input type="password" name="password" required style="width: 100%; padding: 10px; border: 2px solid #900020; border-radius: 5px;">
                </div>
                
                <div style="margin-bottom: 20px;">
                    <label style="display: block; margin-bottom: 5px; color: #2d2d2d;">Confirm Password:</label>
                    <input type="password" name="confirmPassword" required style="width: 100%; padding: 10px; border: 2px solid #900020; border-radius: 5px;">
                </div>
                
                <button type="submit" style="width: 100%; background-color: #900020; color: white; padding: 12px; border: none; border-radius: 5px; cursor: pointer;">Sign Up</button>
            </form>
            
            <p style="text-align: center; margin-top: 20px;">
                Already have an account? <a href="/auth/sign-in" style="color: #900020;">Sign In</a>
            </p>
        </div>
    </section>

    <%- include('../partials/footer') %>
</body>
</html>